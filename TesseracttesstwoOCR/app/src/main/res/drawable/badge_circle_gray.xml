    <item android:state_pressed="true">

        <shape android:dither="false"
            android:shape="oval"
            android:useLevel="false"
            android:visible="false">


            <solid android:color="#813bd8ff" />
            <stroke
                android:width="1dip"
                android:color="#00ffffff" />
            <padding
                android:bottom="5dip"
                android:left="5dip"
                android:right="5dip"
                android:top="5dip" />

            <!-- 形狀大小 -->
            <size
                android:width="22dp"
                android:height="22dp" />


        </shape>

    </item>


    <item android:color="@android:color/black">

        <shape android:dither="false"
        android:shape="oval"
        android:useLevel="false"
        android:visible="false">


        <solid android:color="#81ffffff" />
        <stroke
            android:width="1dip"
            android:color="#00ffffff" />
        <padding
            android:bottom="5dip"
            android:left="5dip"
            android:right="5dip"
            android:top="5dip" />

        <!-- 形狀大小 -->
        <size
            android:width="22dp"
            android:height="22dp" />


        </shape>
    </item>




